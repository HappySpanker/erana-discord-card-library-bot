{
  "name": "erana-discord-card-library-bot",
  "version": "0.0.1",
  "description": "A tavern card library exposed via a Discord bot",
  "engines": {
    "node": ">=24 <25"
  },
  "keywords": [
    "discord",
    "bot",
    "card",
    "tavern"
  ],
  "homepage": "https://github.com/HappySpanker/erana-discord-card-library-bot#readme",
  "bugs": {
    "url": "https://github.com/HappySpanker/erana-discord-card-library-bot/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HappySpanker/erana-discord-card-library-bot.git"
  },
  "license": "MIT",
  "author": "HappySpanker",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rm -rf ./dist",
    "typecheck": "tsc --noEmit",
    "run": "node --env-file=.env ./dist/index.js",
    "docker:build-local": "docker build -t erana/discord-bot:dev .",
    "docker:run-local": "docker run --rm --name erana-discord-bot erana/discord-bot:dev",
    "docker:build": "DOCKER_HOST=ssh://docker-host docker build -t erana/discord-bot:dev .",
    "docker:run": "DOCKER_HOST=ssh://docker-host docker run --rm --name erana-discord-bot erana/discord-bot:dev"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "discord.js": "^14.25.1"
  }
}
